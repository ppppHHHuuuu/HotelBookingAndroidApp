<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.CodeInput">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:text="Nhóm 7"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="42dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="onBackClick">

            <ImageView
                android:layout_width="13sp"
                android:layout_height="13sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow_xml" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="5dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập mã xác thực đã được gửi vào điện thoại của bạn"
            android:textStyle="bold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <EditText
                android:id="@+id/otp_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
            <EditText
                android:id="@+id/otp_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
            <EditText
                android:id="@+id/otp_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
            <EditText
                android:id="@+id/otp_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
            <EditText
                android:id="@+id/otp_5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
            <EditText
                android:id="@+id/otp_6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="30sp"
                android:background="@drawable/blue_round_background"
                android:textColor="#000000"
                android:layout_weight="1"
                android:clickable="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:layout_marginTop="20dp"
            app:backgroundTint="#006ECB"
            app:cornerRadius="5dp"
            android:text="Đăng nhập"
            android:textSize="12sp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/resend_time_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Có thể gửi lại sau: 60"
            android:clickable="true" />

        <TextView
            android:id="@+id/resend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gửi lại"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#006ECB"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>